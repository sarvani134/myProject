        <input
            type="number"
            id="studentId"
            name="id"
            placeholder="Enter your ID"
            required
        /><br><br>
        <label for="name">Name:</label><br>
        <input
            type="text"
            id="name"
            name="name"
            placeholder="Enter your name"
           
        /><br><br>
        <p id="msg"></p>

        <!-- Courses -->
